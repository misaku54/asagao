<% @page_title = "アカウント情報の編集" %>

<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "マイアカウントに戻る", :account %></div>
<%# memberのモデルオブジェクトを渡しているため、オプションをつけないとmembersコントローラーのupdateアクションに行ってしまう。 %>
<%= form_with model: @member, scope: :account, url: :account, local: true do |form| %>
    <%= render "shared/member_form" ,form: form%>
    <div><%= form.submit %></div>
<% end %>
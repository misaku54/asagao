<%= render "shared/login_form" unless current_member %>

<h2>最新ニュース</h2>
<%
    articles = Article.visible.order(released_at: :desc).limit(5) #掲載期間中のニュースのみで抽出
    articles = articles.open_to_the_public unless current_member #さらに会員でない(ログインしていない)場合、会員限定ニュース以外で抽出
%>
<ul>
    <% articles.each do |article| %>
        <li><%= link_to article.title, article %></li>
    <% end %>
</ul>

<h2>会員のブログ</h2>
<%# ビューでエントリオブジェクトを生成 %>
<%
    entries = Entry.readable_for(current_member)
        .order(posted_at: :desc).limit(5)
%>
<ul>
    <% entries.each do |entry| %>
        <li>
            <%= link_to entry.title, entry %>
            by <%= link_to entry.author.name, [entry.author, :entries] %>
        </li>
    <% end %>
</ul>